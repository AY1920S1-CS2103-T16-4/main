<fx:root minHeight="600" minWidth="450" onCloseRequest="#handleExit" title="guiltTrip() - your personal finance tracker" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/guiltTrip()_32.png" />
    </icons>
    <scene>
        <Scene fx:id="scene">
            <stylesheets>
                <URL value="@LightTheme.css" />
                <URL value="@ExtensionsLight.css" />
            </stylesheets>

            <HBox fx:id="window" minHeight="1180" prefHeight="1180" maxHeight="1180" style="-fx-background-color: White" spacing="5">
                <padding>
                    <Insets bottom="5" left="5" right="5" top="5"/>
                </padding>
                <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: white">
                    <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
                        <Menu mnemonicParsing="false" text="File">
                            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
                        </Menu>
                    </MenuBar>

                    <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" styleClass="pane-with-border" VBox.vgrow="NEVER">
                        <padding>
                            <Insets bottom="5" left="10" right="10" top="5" />
                        </padding>
                    </StackPane>

                    <VBox fx:id="entryList" minWidth="340" prefWidth="340" styleClass="pane-with-border" VBox.vgrow="ALWAYS" spacing="5">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        <StackPane fx:id="expenseListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                        <StackPane fx:id="IncomeListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                    </VBox>

                    <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
                        <padding>
                            <Insets bottom="5" left="10" right="10" top="5" />
                        </padding>
                    </StackPane>

                    <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
                </VBox>
                <!-- to contain the side panels in vbox -->
                <VBox fx:id="sidePanelsPlaceHolder" minWidth="400" prefWidth="400" spacing="5" styleClass="side-panel-placeholder">
                    <padding>
                        <Insets bottom="5" left="5" right="5" top="5"/>
                    </padding>
                    <VBox fx:id="wishesPlaceHolder" minWidth="400" prefWidth="400" styleClass="side-panel" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        <Label fx:id="wishlistTitle" styleClass="side-panel-title" text="Wishlist" style="-fx-text-fill: MediumPurple"/>
                    </VBox>
                    <VBox fx:id="budgetsPlaceHolder" minWidth="400" prefWidth="400" styleClass="side-panel" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        <Label fx:id="budgetTitle" styleClass="side-panel-title" text="Budgets" style="-fx-text-fill: SteelBlue"/>
                    </VBox>
                    <VBox fx:id="remindersPlaceHolder" minWidth="400" prefWidth="400" styleClass="side-panel" VBox.vgrow="ALWAYS" >
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        <Label fx:id="remindersTitle" styleClass="side-panel-title" text="Reminders" style="-fx-text-fill: GoldenRod"/>
                    </VBox>
                    <VBox fx:id="autoExpensesPlaceHolder" minWidth="400" prefWidth="400" styleClass="side-panel" VBox.vgrow="ALWAYS" >
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        <Label fx:id="autoExpTitle" styleClass="side-panel-title" text="Auto Expenses" style="-fx-text-fill: Coral" />
                    </VBox>
                </VBox>
            </HBox>
        </Scene>
    </scene>
</fx:root>