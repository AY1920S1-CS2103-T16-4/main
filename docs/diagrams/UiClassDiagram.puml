@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Interface Ui <<Interface>>
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class HelpWindow
Class ResultDisplay
Class EntryListPanel
Class BudgetPanel
Class WishListPanel
Class ReminderPanel
Class EntryCard
Class ExpenseCard
Class IncomeCard
Class BudgetCard
Class WishListCard
Class ExpenseReminderCard
Class WishReminderCard
Class StatusBarFooter
Class CommandBox
Class FontName
Class FontManager
Class StatisticsWindow
Class StatisticsPieChartPanel
Class StatisticsTable
Class StatisticsPieChart
Class StatisticsTablePanel
Class StatisticsBarChart
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager --> MainWindow
MainWindow --> HelpWindow
MainWindow *--> CommandBox
MainWindow *--> ResultDisplay
MainWindow *--> EntryListPanel
MainWindow *--> StatisticsWindow
MainWindow *--> WishListPanel
MainWindow *--> BudgetPanel
MainWindow *--> ReminderPanel
MainWindow *--> StatusBarFooter
MainWindow --> FontManager
MainWindow ..> FontName

StatisticsWindow *-->"1" StatisticsPieChartPanel
StatisticsPieChartPanel *-->"0..2" StatisticsPieChart
StatisticsWindow *-->"1" StatisticsTablePanel
StatisticsTablePanel *-->"0..2" StatisticsTable

EntryListPanel -up-> EntryCard

EntryListPanel -right-> ExpenseCard

EntryListPanel -down-> IncomeCard

EntryListPanel --> StatisticsWindow

EntryListPanel --> StatisticsBarChart


WishListPanel --> WishListCard

BudgetPanel --> BudgetCard

ReminderPanel --> ExpenseReminderCard

ReminderPanel --> WishReminderCard

FontManager --> FontName

MainWindow --|> UiPart

ResultDisplay --|> UiPart
CommandBox --|> UiPart
EntryListPanel --|> UiPart
WishListPanel --|> UiPart
BudgetPanel --|> UiPart
ReminderPanel --|> UiPart
EntryCard --|> UiPart
WishListCard --|> UiPart
BudgetCard --|> UiPart
ExpenseReminderCard --|> UiPart
WishReminderCard --|> UiPart
StatisticsBarChart --|> UiPart
StatisticsWindow --|> UiPart
StatisticsBarChart --|> UiPart
StatisticsTable --|> UiPart
StatisticsPieChart --|> UiPart
StatisticsPieChartPanel --|> UiPart
StatisticsTablePanel --|> UiPart
StatusBarFooter -down-|> UiPart
HelpWindow -down-|> UiPart

EntryCard .down.> Model
ExpenseCard .down.> Model
IncomeCard .down.> Model
WishListCard .down.> Model
BudgetCard .down.> Model
ExpenseReminderCard .down.> Model
WishReminderCard .down.> Model

UiManager -right-> Logic
MainWindow -left-> Logic

EntryListPanel -[hidden]left- HelpWindow
EntryListPanel -[hidden]left- ReminderPanel
HelpWindow -[hidden]left- CommandBox
CommandBox -[hidden]left- ResultDisplay
ResultDisplay -[hidden]left- StatusBarFooter
StatusBarFooter -[hidden]left- FontManager

MainWindow -[hidden]-|> UiPart
@enduml
